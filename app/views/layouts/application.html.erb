<!DOCTYPE html>
<html>
  <head>
    <title>TravelApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Travelwise</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    
    <!-- Facebook and Twitter integration -->
    <meta property="og:title" content=""/>
    <meta property="og:image" content=""/>
    <meta property="og:url" content=""/>
    <meta property="og:site_name" content=""/>
    <meta property="og:description" content=""/>
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:url" content="" />
    <meta name="twitter:card" content="" />

    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
    
    <!-- Animate.css -->
    <%= stylesheet_link_tag 'animate', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Icomoon Icon Fonts-->
    <%= stylesheet_link_tag 'icomoon', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap  -->
    <%= stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Magnific Popup -->
    <%= stylesheet_link_tag 'magnific-popup', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Flexslider  -->
    <%= stylesheet_link_tag 'flexslider', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Owl Carousel -->
    <%= stylesheet_link_tag 'owl.carousel.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'owl.theme.default.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <!-- Date Picker -->
    <%= stylesheet_link_tag 'bootstrap-datepicker', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Flaticons  -->
    <%= stylesheet_link_tag 'flaticon', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Theme style  -->
    <%= stylesheet_link_tag 'style', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Modernizr JS -->
    <%= javascript_include_tag "respond.min" %>
    <%= javascript_include_tag "modernizr-2.6.2.min" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
      <div class="container">	
        <%= render 'layouts/messages' %>		     
      </div>
      <%= yield %>
      <!-- jQuery -->
      <%= javascript_include_tag "jquery.min" %>
      <!-- jQuery Easing -->
      <%= javascript_include_tag "jquery.easing.1.3" %>
      <!-- Bootstrap -->
        <%= javascript_include_tag "bootstrap.min" %>
      <!-- Waypoints -->
      <%= javascript_include_tag "jquery.waypoints.min" %>
      <!-- Flexslider -->
      <%= javascript_include_tag "jquery.flexslider-min" %>
      <!-- Owl carousel -->
      <%= javascript_include_tag "owl.carousel.min" %>
      <!-- Magnific Popup -->
      <%= javascript_include_tag "jquery.magnific-popup.min" %>
      <%= javascript_include_tag "magnific-popup-options" %>
      <!-- Date Picker -->
      <%= javascript_include_tag "bootstrap-datepicker" %>
      <!-- Stellar Parallax -->
      <%= javascript_include_tag "jquery.stellar.min" %>
      <!-- Main -->
      <%= javascript_include_tag "main" %>
      <%= javascript_include_tag "respond.min" %>

  </body>
</html>
