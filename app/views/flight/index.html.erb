<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_airline_info_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :airlinecode, 'Search for a airline information by code '%>
            <%= text_field_tag :airlinecode, nil, placeholder: 'Eg. AA', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
      <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>

      <div class="mx-auto mt-5" style="width: 400px">
    </div>
  </div>
</div>