					<div class="col-md-9">
                            <div class="wrap-division">
                                <div class="col-md-18 col-sm-18 animate-box">

                                    <% @flightSegments['data'].each do |flight| %>
                                        </br>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card text-center">
                                                    <div class="card-header">
                                                    <h3>Flight Low Fare</h3>
                                                </div>
                                                <div class="card-body">
                                                    <div class="same-line">
                                                        <div class="on-lineclass">
                                                            <em>Class:</em>
                                                            <p><%= flight['offerItems'][0]['services'][0]['segments'][0]['pricingDetailPerAdult']['travelClass']%></p>
                                                        </div>
                                                    </div>
                            
                                                    </br>
                                                    </br>
                            
                                                    <div class="same-line">
                                                    <div class="on-the-left">
                                                        <h3><%= flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['departure']['iataCode']%></h3>
                                                        <i class="fas fa-plane-departure"></i>
                                                </div>
                                                <div style="margin: 2px -120px 40px -220px;">
                                                    <i class="far fa-clock"></i>
                                                    <%= DateTime.parse(flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['departure']['at']).strftime("%I:%M%p")%>
                                                </div>
                                                    <div class="on-the-center">  
                                                        <%= DateTime.parse(flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['departure']['at']).strftime("%Y-%m-%d")%>
                            
                                                    <i class="fas fa-arrow-right" ></i>
                                                    <%= DateTime.parse(flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['arrival']['at']).strftime("%Y-%m-%d")%>
                            
                                                    </div>
                                                    <div class="on-the-right">   
                                                    <h3><%= flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['arrival']['iataCode']%></h3>
                                                    <i class="fas fa-plane-arrival"></i>
                                                    </div>
                                                    <div style="margin: 2px 170px 40px 135px;">
                                                        <i class="far fa-clock"></i>
                                                        <%= DateTime.parse(flight['offerItems'][0]['services'][0]['segments'][0]['flightSegment']['arrival']['at']).strftime("%I:%M%p")%>
                                                    </div>
                                                </div>
                                                </div>
                                                <div class="card-footer text-muted">
                                                    <p>Price <i class="fas fa-dollar-sign"></i> </p>
                                                    <h4><%= flight['offerItems'][0]['pricePerAdult']['total']%></h4>
                                                </div>
                                                </div>
